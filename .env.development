# ========================
# Development Environment
# ========================

# Application Settings
# ===================
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=DEBUG
APP_NAME=TargetAnalysisPlatform
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Security
# ========
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Database - PostgreSQL
# ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=target_analysis_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB
# =======
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=mongodevpass
MONGO_INITDB_DATABASE=target_analysis_dev
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/

# NLP Configuration
# ================
NLP_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
NLP_CACHE_DIR=./.cache
NLP_DEVICE=cpu  # 'cuda' if GPU is available

# ETL Configuration
# ================
ETL_CACHE_DIR=./etl_cache
ETL_MAX_WORKERS=4
ETL_BATCH_SIZE=100

# IBGE API (SIDRA)
# ===============
IBGE_API_KEY=your_ibge_api_key_here  # Optional for development
IBGE_CACHE_TTL=86400  # 24 hours in seconds

# CORS (Cross-Origin Resource Sharing)
# ==================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# Rate Limiting
# ============
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=30/minute

# Email (for notifications, optional)
# =================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@targetanalysis.com

# Cache
# =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600  # 1 hour

# Feature Flags
# ============
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_ADVANCED_NLP=true
FEATURE_EMAIL_NOTIFICATIONS=false
