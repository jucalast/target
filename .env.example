# ========================
# Environment Configuration
# ========================
# Copy this file to .env.development or .env.production
# and fill in the appropriate values

# Application Settings
# ===================
DEBUG=True
ENVIRONMENT=development 
LOG_LEVEL=INFO
APP_NAME=TargetAnalysisPlatform
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Security
# ========
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database - PostgreSQL
# ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=target_analysis
POSTGRES_USER=db_user
POSTGRES_PASSWORD=db_password

# MongoDB
# =======
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=mongopass
MONGO_INITDB_DATABASE=target_analysis
MONGO_HOST=localhost
MONGO_PORT=27017

# NLP Configuration
# ================
NLP_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
NLP_CACHE_DIR=./.cache
NLP_DEVICE=cpu  # or 'cuda' for GPU

# ETL Configuration
# ================
ETL_CACHE_DIR=./etl_cache
ETL_MAX_WORKERS=4
ETL_BATCH_SIZE=100

# IBGE API (SIDRA)
# ===============
IBGE_API_KEY=your_ibge_api_key_here
IBGE_CACHE_TTL=86400  # 24 hours

# CORS (Development)
# =================
CORS_ORIGINS=["http://localhost:3000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# Email (for notifications)
# ========================
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@example.com
